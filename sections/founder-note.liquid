<div class="bg-gradient-to-br from-blue-600 to-blue-800 py-20 px-6">

    <div class="max-w-[1152px] mx-auto grid md:grid-cols-3 gap-10 items-start md:flex-nowrap!">
      <div class="text-center md:text-left w-[480px]">

        <div class="flex justify-center md:justify-center">
            {{ section.settings.founder_image | image_url: width: 500 | image_tag: loading:'lazy', width: 250, height: 250, class: 'w-[250px] h-auto rounded-full border-8 border-blue-200 object-cover' }}
        </div>
        <h2 class="mt-6 !tw-text-[45px] md:!tw-text-[45px] font-semibold text-[#D4AF37]! text-center">
          {{ section.settings.founder_heading }}
        </h2>

        <p class="text-[#D4AF37]! text-[22px] mt-2 text-center ">
          {{ section.settings.founder_message }}
        </p>

      </div>

      <div class="md:col-span-2 text-white text-left leading-relaxed space-y-5 text-[17px] font-moonTime">
        {{ section.settings.founder_signature }}
      </div>
    </div>
</div>


{% schema %}
{
  "name": "Founder Note",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "founder_image",
      "label": "Founder Image"
    },
    {
    "type": "text",
    "id": "founder_heading",
    "label": "Founder Note Heading",
    "default": "Founderâ€™s Note" 
    },
    {
      "type": "inline_richtext",
      "id": "founder_message",
      "label": "Founder's Message"
    },
    {
    "type": "header",
    "content": "Founder Note Section"
},
{
    "type": "richtext",
    "id": "founder_signature",
    "label": "Founder Signature"
}
  ],
    "presets": [
        {
        "name": "Founder Note"
        }
    ]
}
{% endschema %}