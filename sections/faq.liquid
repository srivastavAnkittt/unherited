{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div class="section-{{ section.id }}-padding">
<div class="page-width">
  <div class="mx-auto divide-y divide-gray-200">
    {% if section.settings.faq_heading != '' %}
      <span class="md:text-[30px] text-[20px] font-bold pb-4 block">{{ section.settings.faq_heading }}</span>
    {% endif %}
    {% if section.settings.faq_message != '' %}
      <div class="mb-6 text-gray-700">
        {{ section.settings.faq_message }}
      </div>
    {% endif %}

    {% for block in section.blocks %}
      {% if block != null %}
        <details name="faq" class="group py-4">
          <summary class="flex justify-between items-center cursor-pointer list-none">
            <span>{{ block.settings.question }}</span>
            <span class="transition-transform duration-300 group-open:rotate-45">+</span>
          </summary>

          <div class="pt-2 text-gray-600 text-[14px]">
            {{ block.settings.answer }}
          </div>
        </details>
      {% endif %}
    {% endfor %}
  </div>
</div>
</div>

{% schema %}
{
  "name": "Faqs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "faq_heading",
      "label": "FAQs Heading",
      "default": "Frequently Asked Questions"
    },
    {
      "type": "inline_richtext",
      "id": "faq_message",
      "label": "FAQs Message"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQs"
    }
  ]
}
{% endschema %}
