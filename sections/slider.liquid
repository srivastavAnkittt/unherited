{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings['padding_top-mob'] | default: section.settings.padding_top }}px;
      padding-bottom: {{ section.settings['padding_bottom-mob'] | default: section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<style>
  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
  @media (prefers-reduced-motion: reduce) {
    .prefers-reduced-motion\:paused { animation-play-state: paused !important; }
  }
  .edge-fade {
    -webkit-mask-image: linear-gradient(to right, transparent, black 12%, black 88%, transparent);
            mask-image: linear-gradient(to right, transparent, black 12%, black 88%, transparent);
  }
</style>
<div class="section-{{ section.id }}-padding" data-section="{{ section.id }}">
<div class="py-8 sm:py-10 md:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
    {% if section.settings.heading %}
      <h2 class="sr-only">{{ section.settings.heading | default: 'Featured In' }}</h2>
    {% endif %}

    <div class="relative group overflow-hidden edge-fade">
      <div
        class="flex w-[200%] items-center [animation:marquee_10s_linear_infinite] group-hover:[animation-play-state:paused] prefers-reduced-motion:paused"
        aria-label="Press logo marquee"
      >
        <ul class="flex  shrink-0 items-center justify-between gap-6 xs:gap-8 sm:gap-12 md:gap-16 lg:gap-24">
          {% for block in section.blocks %}
            <li>
              {{
                block.settings.image
                | image_url: width: 400
                | image_tag:
                  width: '200px',
                  height: 'auto',
                  class: 'h-8 xs:h-9 sm:h-10 md:h-12 lg:h-14 w-auto opacity-80 hover:opacity-100 transition'
              }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

{% schema %}
{
  "name": "Slider Image",
  "class": "slider-image",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
     {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Desktop Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Desktop Padding Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top-mob",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom-mob",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Mobile Padding Bottom",
      "default": 50
    },
  ],
  "blocks": [
    {
      "type": "Image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Image"
    }
  ]
}
{% endschema %}
